@{
    ViewData["Title"] = "Logg ut"; //logout page for the caregivers
}

<div class="container mt-5 text-center">
    <div class="card p-4 shadow-sm mx-auto" style="max-width: 420px;">
        <h2 class="mb-3">Du er nå logget ut</h2>
        <p class="text-muted mb-4">Takk for innsatsen i dag!</p>

        <a asp-controller="CaregiverAccount" asp-action="Login" class="btn btn-primary w-100">
            Logg inn igjen
        </a>

        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
            Gå til forsiden
        </a>
    </div>
</div>
