@model HomeCare.ViewModels.Account.SignInViewModel
@{
    ViewData["Title"] = "Logg inn";
}

<div class="signup-container container">
    <div class="signup-card">
        <a asp-controller="Home" asp-action="Index" class="back-btn">← Tilbake til forsiden</a>

        <h2 class="text-center text-primary mb-4">Logg inn på HomeCare</h2>
        <p class="text-center text-muted mb-4">
            Velkommen tilbake! Logg inn for å få tilgang til dine tjenester og varsler.
        </p>

        <form asp-action="SignIn" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-postadresse</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="F.eks. anna@epost.no" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label">Passord</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Skriv inn passord" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-homecare w-100 mb-3">Logg inn</button>

            <div class="text-center mt-3">
                <p class="text-muted">
                    Har du ikke konto?
                    <a asp-controller="User" asp-action="SignUp" class="text-primary text-decoration-none fw-bold">
                        Registrer deg her
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
