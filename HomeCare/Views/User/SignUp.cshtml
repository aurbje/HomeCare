@model HomeCare.ViewModels.Account.SignUpViewModel
@{
    ViewData["Title"] = "Registrer deg";
}

<div class="signup-container container">
    <div class="signup-card">
        <a asp-controller="Home" asp-action="Index" class="back-btn">← Tilbake til forsiden</a>

        <h2 class="text-center text-primary mb-4">Opprett HomeCare-konto</h2>
        <p class="text-center text-muted mb-4">
            Fyll inn informasjonen under for å komme i gang.<br />
            Vi hjelper deg med å holde hjemmet trygt og komfortabelt.
        </p>

        <form asp-action="SignUp" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Fullt navn</label>
                <input asp-for="FullName" class="form-control" placeholder="Skriv inn ditt fulle navn" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-postadresse</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="F.eks. anna@epost.no" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Passord</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Velg et passord" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Bekreft passord</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Gjenta passordet" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-homecare w-100">Opprett konto</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
