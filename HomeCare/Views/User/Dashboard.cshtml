@model HomeCare.ViewModels.User.DashboardViewModel

<div class="container py-4">
    <h2 class="text-primary mb-4">Velkommen tilbake, @Model.FullName!</h2>

    <div class="row g-4">

        <!-- üïí P√ÖMINNELSER -->
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h4 class="text-secondary mb-3">Dagens p√•minnelser</h4>
                @if (Model.Reminders != null && Model.Reminders.Any())
                {
                    <ul class="list-group">
                        @foreach (var reminder in Model.Reminders)
                        {
                            <li class="list-group-item">
                                <strong>@reminder.Time:</strong> @reminder.Message
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>Ingen p√•minnelser i dag.</p>
                }
            </div>
        </div>

        <!-- üìÖ AVTALER -->
        <div class="col-md-6">
            <div class="card shadow-sm p-3">
                <h4 class="text-secondary mb-3">Kommende avtaler</h4>
                @if (Model.Appointments != null && Model.Appointments.Any())
                {
                    <ul class="list-group">
                        @foreach (var appointment in Model.Appointments)
                        {
                            <li class="list-group-item">
                                <strong>@appointment.ServiceType</strong> ‚Äì 
                                @appointment.DateTime.ToString("dd.MM.yyyy HH:mm")
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>Ingen kommende avtaler.</p>
                }

                <div class="mt-3 text-end">
                    <a href="/Booking/Index" class="btn btn-primary">Bestill ny time</a>
                </div>
            </div>
        </div>

    </div>

    <!-- üîî VARSLER -->
    <div class="card shadow-sm p-3 mt-4">
        <h4 class="text-secondary mb-3">Varsler</h4>
        @if (Model.Notifications != null && Model.Notifications.Any())
        {
            <ul class="list-group">
                @foreach (var note in Model.Notifications)
                {
                    <li class="list-group-item">@note</li>
                }
            </ul>
        }
        else
        {
            <p>Ingen varsler akkurat n√•.</p>
        }
    </div>
</div>
