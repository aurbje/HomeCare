@{
    ViewData["Title"] = "Kontakt oss";
}

<div class="container py-5">
    <div class="row align-items-center">
        
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h1 class="fw-bold mb-4">Kontakt HomeCare</h1>
            <p class="lead">
                Vi er her for å hjelpe deg – enten du ønsker informasjon om våre tjenester,
                trenger veiledning eller vil bestille hjelp i hjemmet.
            </p>

            <ul class="list-unstyled mt-4">
                <li class="mb-2">
                    <i class="bi bi-telephone me-2"></i>
                    <strong>Telefon:</strong> <a href="tel:22222222" class="text-dark">22 22 22 22</a>
                </li>
                <li class="mb-2">
                    <i class="bi bi-envelope me-2"></i>
                    <strong>E-post:</strong> <a href="mailto:kontakt@homecare.no" class="text-dark">kontakt@homecare.no</a>
                </li>
                <li class="mb-2">
                    <i class="bi bi-geo-alt me-2"></i>
                    <strong>Adresse:</strong> Storgata 5, 0155 Oslo
                </li>
                <li class="mb-2">
                    <i class="bi bi-clock me-2"></i>
                    <strong>Åpningstider:</strong> Man–fre 08:00–16:00
                </li>
                <li>
                    <i class="bi bi-heart me-2"></i>
                    <strong>Vakttelefon (akutt):</strong> 22 22 22 99
                </li>
            </ul>

            <div class="mt-4">
                <h5 class="fw-semibold text-secondary">Send oss en melding</h5>
                <form>
                    <div class="mb-3">
                        <input type="text" class="form-control" placeholder="Navn" required />
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" placeholder="E-post" required />
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" rows="4" placeholder="Din melding..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-main btn-lg px-4 py-2 bg-green shadow-lg">Send oss melding</button>
                </form>
            </div>
        </div>

        <div class="col-lg-6 text-center">
            <img src="~/images/forside5.png" alt="HomeCare team" class="img-fluid rounded-4 shadow-sm" style="max-height: 420px; object-fit: cover;">
        </div>
    </div>
</div>
