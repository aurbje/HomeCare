@{
    ViewData["Title"] = "Bestill time";
}

<!-- HERO SECTION -->
<section class="hero-homecare d-flex align-items-center justify-content-center text-center text-white position-relative">
    <div class="hero-overlay"></div>
    <div class="container position-relative z-2">
        <h1 class="display-4 fw-bold mb-3">Bestill omsorg der du er</h1>
        <p class="lead mb-4">
            Fyll ut skjemaet under, så kontakter vi deg for å finne et tidspunkt som passer best for deg.
        </p>
    </div>
</section>

<!-- BOOKING FORM SECTION -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body p-5">
                        <h2 class="fw-bold text-center mb-4 text-primary">Book et møte eller tjeneste</h2>
                        <p class="text-center text-muted mb-5">
                            Vi tilbyr uforpliktende veiledning og bistand i hjemmet.  
                            Velg ønsket dato og fortell oss hva du trenger hjelp med.
                        </p>

                        <form>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Fornavn</label>
                                    <input type="text" class="form-control" placeholder="Fornavn" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Etternavn</label>
                                    <input type="text" class="form-control" placeholder="Etternavn" required />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Telefonnummer</label>
                                    <input type="tel" class="form-control" placeholder="+47 123 45 678" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">E-postadresse</label>
                                    <input type="email" class="form-control" placeholder="din@email.no" required />
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Velg tjeneste</label>
                                    <select class="form-select" required>
                                        <option selected disabled>Velg...</option>
                                        <option>Hjemmesykepleie</option>
                                        <option>Praktisk hjelp</option>
                                        <option>Personlig assistanse</option>
                                        <option>Annet</option>
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-semibold">Ønsket dato</label>
                                    <input type="date" class="form-control" required />
                                </div>

                                <div class="col-12">
                                    <label class="form-label fw-semibold">Tilleggsinformasjon</label>
                                    <textarea class="form-control" rows="4" placeholder="Fortell oss kort hva du trenger hjelp med..."></textarea>
                                </div>
                            </div>

                            <div class="text-center mt-5">
                                <button type="submit" class="btn btn-main btn-lg px-5 py-2 shadow-lg">
                                    Send forespørsel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA SECTION -->
<section class="cta-section text-white text-center py-5">
    <div class="container">
        <h2 class="fw-bold mb-3">Spørsmål før du bestiller?</h2>
        <p class="lead mb-4">Kontakt oss direkte – vi hjelper deg gjerne med å finne riktig tjeneste.</p>
        <a asp-controller="Home" asp-action="Contact" class="btn btn-light btn-lg text-primary fw-semibold px-4">
            Kontakt oss
        </a>
    </div>
</section>
