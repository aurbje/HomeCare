@{
    ViewData["Title"] = "Om HomeCare";
}

<!-- HERO SECTION -->
<section class="hero-homecare d-flex align-items-center justify-content-center text-center text-white position-relative">
    <div class="container position-relative z-2">
        <h1 class="display-3 fw-bold mb-3 animate-fade">Om HomeCare</h1>
        <p class="lead mb-4 animate-fade-delay text-white">Trygghet, nærhet og støtte – akkurat når du trenger det.</p>
        <a asp-controller="Home" asp-action="About" class="btn btn-main btn-lg px-4 py-2 shadow-lg">Les mer om oss</a>
    </div>
</section>

<!-- INTRO -->
<section class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="fw-bold mb-4 text-green">Hva er HomeCare?</h2>
        <p class="lead text-muted mx-auto" style="max-width: 800px;">
            HomeCare har levert pålitelige og omsorgsfulle hjemmetjenester i Oslo-området siden 1999.
            Vi tilbyr tjenester både gjennom offentlige ordninger og for privatpersoner som ønsker ekstra trygghet og støtte i hverdagen.
            Hos oss står respekt, nærhet og personlig oppfølging sentralt – slik at du og dine pårørende alltid føler dere ivaretatt.
        </p>
    </div>
</section>

<!-- VISION & MISSION -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-lg rounded-4 hover-lift">
                    <div class="card-body p-4">
                        <h3 class="fw-bold text-gradient mb-3"><i class="bi bi-eye-fill me-2"></i>Vår visjon</h3>
                        <p class="text-muted">
                            Et samfunn der alle eldre kan leve trygt og selvstendig hjemme, støttet av teknologi som gjør omsorgen personlig og tilgjengelig.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 border-0 shadow-lg rounded-4 hover-lift">
                    <div class="card-body p-4">
                        <h3 class="fw-bold text-gradient mb-3"><i class="bi bi-heart-fill me-2"></i>Vår misjon</h3>
                        <p class="text-muted">
                            Å tilby en brukervennlig og pålitelig plattform som gjør det enkelt å motta og administrere hjemmetjenester – med trygghet, kvalitet og omsorg i fokus.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- VERDIER -->
<section class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="fw-bold mb-5 text-green">Våre kjerneverdier</h2>
        <div class="row g-4">
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm border-0 h-100 rounded-4 hover-lift">
                    <div class="card-body">
                        <i class="bi bi-people-fill fs-1 mb-3"></i>
                        <h5 class="fw-bold text-gradient">Omsorg</h5>
                        <p class="text-muted small">Vi setter brukernes behov først og sørger for personlig oppfølging.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm border-0 h-100 rounded-4 hover-lift">
                    <div class="card-body">
                        <i class="bi bi-shield-lock-fill fs-1 mb-3"></i>
                        <h5 class="fw-bold text-gradient">Trygghet</h5>
                        <p class="text-muted small">Alt vi gjør er sikkert, pålitelig og med fokus på personvern.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm border-0 h-100 rounded-4 hover-lift">
                    <div class="card-body">
                        <i class="bi bi-lightning-charge-fill fs-1 mb-3"></i>
                        <h5 class="fw-bold text-gradient">Enkelhet</h5>
                        <p class="text-muted small">HomeCare skal være brukervennlig og tilgjengelig for alle, uansett erfaring.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="card shadow-sm border-0 h-100 rounded-4 hover-lift">
                    <div class="card-body">
                        <i class="bi bi-cpu-fill fs-1 mb-3"></i>
                        <h5 class="fw-bold text-gradient">Innovasjon</h5>
                        <p class="text-muted small">Vi forbedrer kontinuerlig løsningen for fremtidens hjemmetjenester.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- TIMELINE -->
<section class="py-5">
    <div class="container">
        <h2 class="fw-bold text-center mb-5 text-gradient">Vår historie</h2>
        <div class="timeline position-relative mx-auto" style="max-width: 700px;">
            <div class="timeline-item mb-4">
                <h6 class="fw-bold text-gradient">2024 – Idéen oppstår</h6>
                <p class="text-muted small">Behovet for trygg digital hjemmetjeneste identifiseres gjennom samtaler med eldre og helsepersonell.</p>
            </div>
            <div class="timeline-item mb-4">
                <h6 class="fw-bold text-gradient">2025 – Utvikling starter</h6>
                <p class="text-muted small">Første prototype lanseres i samarbeid med lokale hjemmetjenester.</p>
            </div>
            <div class="timeline-item mb-4">
                <h6 class="fw-bold text-gradient">2025 – Pilot og tilbakemelding</h6>
                <p class="text-muted small">Pilotprosjekt gjennomføres, og brukernes erfaringer brukes til forbedring.</p>
            </div>
            <div class="timeline-item">
                <h6 class="fw-bold text-gradient">2025 – Lansering</h6>
                <p class="text-muted small">HomeCare lanseres nasjonalt med fokus på kvalitet og trygghet.</p>
            </div>
        </div>
    </div>
</section>

