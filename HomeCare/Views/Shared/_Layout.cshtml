<!DOCTYPE html>
<html lang="no">

<head>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - HomeCare</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=cancel" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}

<body class="d-flex flex-column min-vh-100">
  <header>
    <nav class="navbar navbar-expand-lg bg-white shadow-sm py-3 fixed-top">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
          <img src="~/images/logoen.jpg" alt="HomeCare Logo" class="homecare-logo me-2" />
          <span class="fw-semibold text-success fs-4">HomeCare</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav align-items-center">
            <li class="nav-item mx-2">
              <a class="nav-link" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house-door me-1"></i> Hjem
              </a>
            </li>
            <li class="nav-item mx-2">
              <a class="nav-link" asp-controller="Home" asp-action="About">
                <i class="bi bi-info-circle me-1"></i> Om oss
              </a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
              <li class="nav-item mx-2">
                <a class="nav-link" asp-controller="Home" asp-action="BookTime">
                  <i class="bi bi-calendar-check me-1"></i> Booking
                </a>
              </li>
            }
            <li class="nav-item mx-2">
              <a class="nav-link" asp-controller="Home" asp-action="Contact">
                <i class="bi bi-envelope me-1"></i> Kontakt
              </a>
            </li>

            <li class="nav-item ms-3">
              <a class="btn btn-success px-3" asp-controller="Account" asp-action="SignIn">
                <i class="bi bi-person-plus me-1"></i> Logg inn
              </a>
            </li>
            <!--
            <li class="nav-item ms-3">
              <a class="btn btn-success px-3" asp-controller="Account" asp-action="SignInOut">
                <i class="bi bi-person-plus me-1"></i> Logg ut
              </a>
            </li>-->
            <li class="nav-item ms-3">
              <a class="btn btn-outline-success px-3 me-2" asp-controller="Account" asp-action="SignUp">
                <i class="bi bi-box-arrow-in-right me-1"></i> Registrer deg
              </a>
            </li>
            <!--Text size start-->
            @{
              var path = Context.Request.Path.Value?.ToLower();
              var showFontControls = path.Contains("/home") || path.Contains("/user/dashboard") ||
              path.Contains("/booking");
            }

            @if (showFontControls)
            {

              <li>
                <div class="text-size-controls">
                  <button class="btn btn-outline-secondary btn-sm me-1" onclick="changeFontSize(1)"
                    aria-label="Øk skriftstørrelse">A+</button>
                  <button class="btn btn-outline-secondary btn-sm" onclick="changeFontSize(-1)"
                    aria-label="Reduser skriftstørrelse">A−</button>
                </div>
              </li>
            }
            <!--end-->
          </ul>
        </div>
      </div>
    </nav>
  </header>






  <main role="main" class="pb-5 pt-4">
    @RenderBody()
  </main>

  <footer class="border-top bg-light text-muted py-4 mt-5 site-footer">
    <div class="container text-center">
      &copy; @DateTime.Now.Year - HomeCare |
      <span class="text-decoration-none text-secondary">Personvern</span>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

  <script src="~/js/site.js" asp-append-version="true"></script>

  <script>
    let currentFontSize = 18;

    function changeFontSize(delta) {
      currentFontSize += delta;
      if (currentFontSize < 14) currentFontSize = 14;
      if (currentFontSize > 24) currentFontSize = 24;

      const content = document.querySelector('.font-resizable-area');
      if (content) {
        content.style.fontSize = currentFontSize + "px";
      }
    }
  </script>

  @RenderSection("Scripts", required: false)
</body>

</html>